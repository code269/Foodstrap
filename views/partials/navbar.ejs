<!-- header -->
<header class="flex items-center justify-between py-2 border-b">
  <a href="/"
    ><img
      class="logo"
      src="/images/logo.png"
      alt="logo"
      style="
        height: 80px;
        margin-top: 5px;
        margin-bottom: 5px;
        margin-right: 30px;
        margin-left: 5px;
      "
  /></a>
  <!--search box-->
  <form
    action="/search/"
    class="example centered1"
    style="margin-top: 60px; margin-left: 20px"
  >
    <input type="text" placeholder="Search Recipe.." name="q" />
    <button type="submit"><i class="fa fa-search"></i></button>
  </form>
  <!--nav-->
  <ul class="inline-flex items-center">
    <li class="px-2 md:px-4">
      <a href="new" class="text-gray-500 font-semibold hover:text-red-500">
        Demo Post
      </a>
    </li>
    <% if(!currentUser) {%>
    <li class="px-2 md:px-4">
      <a href="login" class="text-gray-500 font-semibold hover:text-red-500">
        Log In
      </a>
    </li>
    <li class="px-2 md:px-4">
      <a href="signup" class="text-gray-500 font-semibold hover:text-red-500">
        Sign Up
      </a>
    </li>
    <% } %>
  </ul>
</header>
<!-- header ends here -->
